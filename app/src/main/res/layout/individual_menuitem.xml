<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/round_button_white"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/defaultpic"
            app:civ_border_width="2dp"
            android:layout_marginTop="15dp"
            app:civ_border_color="@color/colorPrimary"
            android:id="@+id/individual_menuitem_image"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_toRightOf="@id/individual_menuitem_image">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="15sp"
                android:id="@+id/individual_menuitem_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:id="@+id/individual_menuitem_price"/>
        </LinearLayout>


            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/bag"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="47dp"
                android:id="@+id/individual_menuitem_addToBag"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="@drawable/borderedlayout"
            android:id="@+id/individual_menuitem_countlayout">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dec"
                android:textColor="#fff"
                android:minHeight="30dp"
                android:minWidth="30dp"
                android:background="@drawable/decrementbuttondesign"
                android:id="@+id/individual_menuitem_countlayout_decbutton"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/individual_menuitem_countlayout_counttext"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="inc"
                android:textColor="#fff"
                android:minHeight="30dp"
                android:minWidth="30dp"
                android:background="@drawable/incrementbuttondesign"
                android:id="@+id/individual_menuitem_countlayout_incbutton"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>